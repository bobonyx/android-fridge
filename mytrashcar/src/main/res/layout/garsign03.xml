<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:padding="@dimen/p010">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/city_t001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city_t001"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/city_s001"
            style="@android:style/Widget.Spinner.DropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:backgroundTint="@color/Teal"
            android:drawSelectorOnTop="true"
            android:entries="@array/city_a001"
            android:prompt="@string/city_s001"
            android:spinnerMode="dialog"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Spinner
            android:id="@+id/city_s002"
            style="@android:style/Widget.Spinner.DropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:backgroundTint="@color/Teal"
            android:drawSelectorOnTop="true"
            android:entries="@array/area_a001"
            android:prompt="@string/city_s002"
            android:spinnerMode="dialog"
            tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:id="@+id/gs_tab03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@color/Lime">

        <TextView
            android:id="@+id/gs_t021"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:text="@string/t001"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/gs_t022"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/t022"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/gs_t023"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/t023"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/gs_t024"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/t024"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/gs_t025"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:text="@string/t025"
            tools:ignore="TextContrastCheck" />

    </TableRow>

    <ListView
        android:id="@+id/gs_list003"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/gs_tab03"
        android:layout_alignTop="@+id/gs_tab03"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="20dp">

    </ListView>

    <TextView
        android:id="@+id/howmany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:text="@string/data_amount"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>